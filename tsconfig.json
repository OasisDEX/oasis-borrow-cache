{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "esnext.asynciterable"],
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "composite": true,
    "tsBuildInfoFile": ".build-cache/cache.tsbuildinfo",
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": "."
  },
  "include": ["src"]
}
